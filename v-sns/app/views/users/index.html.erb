<div class="page-header">
  <h1>Listing Users <small></small></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
				<td>
					<div class="brn-groups">
						<%= link_to 'Show', user, :class => "btn" %>
						<%= link_to 'Edit', edit_user_path(user), :class => "btn" %>
						<%= link_to 'Destroy', user, method: :delete, :class => "btn", data: { confirm: 'Are you sure?' } %>
					</div>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, :class => "btn btn-large" %>
