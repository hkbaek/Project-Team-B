<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class="control-group">
    <%= f.label :commenter, :class => 'control-label' %> 
    <div class="controls">
    	<%= f.text_field :commenter, value: current_user.email, readonly: true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
    	<%= f.text_area :body %>
    </div> 
  </div>
  <div class="control-group">
  	<div class="controls">
			<%= f.submit class: 'btn' %>
  	</div>
  </div>
<% end %>
