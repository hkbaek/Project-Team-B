<%= form.fields_for :tags do |f| %>
  <div class="control-group">
    <%= f.label :name, 'Tag:', :class => 'control-label' %> 
    <div class="controls">
    	<%= f.text_field :name %>
	</div>
  </div>
  <% unless f.object.nil? || f.object.new_record? %>
    <div class="control-group">
      <%= f.label :_destroy, 'Remove:', :class => 'control-label' %>
      <div class="controls">
      	<%= f.check_box :_destroy %>
      </div> 
    </div>
  <% end %>
<% end %>

