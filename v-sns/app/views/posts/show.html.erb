<p id="notice"><%= notice %></p>

<p>
	<strong>Title:</strong>
	<%= @post.title %>
</p>

<p>
	<strong>Content:</strong>
	<%= @post.content %>
</p>

<p>		
	<%= image_tag @post.image_url %>
</p>

<p>
	TAGS : <%= @post.tag_list %>
</p>

<%= render @post.comments %>
 
<% if user_signed_in? %>
	<%= render "comments/form" %>
<% end %>

<% if signed_in? and @post.user == current_user %>	
<%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', posts_path %>
